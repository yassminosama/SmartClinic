@{
    ViewData["Title"] = "Doctor Dashboard";
}

<h2>Welcome to Your Dashboard</h2>


@model SmartClinic.Models.Doctor

<div class="d-flex justify-content-end mb-3">
    <a href="@Url.Action("DoctorPEdit", "DoctorProfile")" class="btn btn-primary me-2">Edit Profile</a>
    <a href="@Url.Action("DoctorAppointments", "DoctorProfile")" class="btn btn-info me-2">View Appointments</a>
    <form asp-action="DeleteProfile" asp-controller="DoctorProfile" method="post" onsubmit="return confirm('Are you sure you want to delete your profile? This action cannot be undone.');">
        <button type="submit" class="btn btn-danger">Delete Profile</button>
    </form>

</div>


<div class="doctor-profile">
    <h3>@Model.FullName</h3>
    <p>Email: @Model.Email</p>
    <p>Specialization: @Model.Specialization</p>
    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
    {
        <img src="@Model.PhotoUrl" alt="Doctor Photo" width="150" />
    }
    else
    {
        <p>No photo uploaded.</p>
    }

</div>
<ul>
    <li><a asp-controller="DoctorProfile" asp-action="DoctorProfileDetails">👤 View Profile</a></li>
</ul>