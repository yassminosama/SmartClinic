@using SmartClinic.Models
@model SmartClinic.Models.AppUser
@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

<div class="card shadow-sm p-4" style="max-width: 500px;">
    <div class="text-center mb-3">
        <img src="~/uploads/@Model.ImagePath" class="rounded-circle" width="150" height="150" />
    </div>

    <dl class="row">
        <dt class="col-sm-4">Full Name:</dt>
        <dd class="col-sm-8">@Model.FullName</dd>

        <dt class="col-sm-4">Birth Date:</dt>
        <dd class="col-sm-8">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-4">Email:</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4">Phone:</dt>
        <dd class="col-sm-8">@Model.PhoneNumber</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" class="btn btn-primary">Edit</a>
        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete your profile?');">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
