@using SmartClinic.Models
@model SmartClinic.Models.AppUser
@{
    ViewData["Title"] = "My Profile";
}

<h2 class="mb-4" style="color: #005f6b; font-weight: 700; letter-spacing: 1.1px; text-align: center;">My Profile</h2>

<div class="card shadow-sm p-4" style="max-width: 480px; margin: auto; border-radius: 15px; background: #e6f2f3; box-shadow: 0 6px 15px rgba(0, 95, 107, 0.2);">
    <div class="text-center mb-4">
        <img src="~/uploads/@Model.ImagePath" class="rounded-circle border" style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #007a87;" alt="Profile Image" />
    </div>

    <dl class="row" style="color: #004451; font-weight: 600; font-size: 1.05rem;">
        <dt class="col-sm-4">Full Name:</dt>
        <dd class="col-sm-8" style="font-weight: 400;">@Model.FullName</dd>

        <dt class="col-sm-4">Birth Date:</dt>
        <dd class="col-sm-8" style="font-weight: 400;">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-4">Email:</dt>
        <dd class="col-sm-8" style="font-weight: 400;">@Model.Email</dd>

        <dt class="col-sm-4">Phone:</dt>
        <dd class="col-sm-8" style="font-weight: 400;">@Model.PhoneNumber</dd>
    </dl>

    <div class="mt-4 d-flex justify-content-center gap-3">
        <a asp-action="Edit" class="btn" style="background-color: #005f6b; color: white; font-weight: 700; padding: 10px 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 95, 107, 0.3); transition: background-color 0.3s;">
            Edit
        </a>

        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete your profile?');">
            <button type="submit" class="btn" style="background-color: #d9534f; color: white; font-weight: 700; padding: 10px 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(217, 83, 79, 0.3); transition: background-color 0.3s;">
                Delete
            </button>
        </form>
    </div>
</div>

<style>
    a.btn:hover {
        background-color: #004451 !important;
        text-decoration: none;
    }

    button.btn:hover {
        background-color: #b53b3a !important;
    }

    dt {
        user-select: none;
    }
</style>
