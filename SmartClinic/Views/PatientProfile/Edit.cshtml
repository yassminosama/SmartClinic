@using SmartClinic.Models
@model SmartClinic.Models.AppUser
@{
    ViewData["Title"] = "Edit Profile";
}

<h2 class="mb-4" style="color: #005f6b; font-weight: 700; letter-spacing: 1.2px; text-align: center;">Edit Profile</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" style="max-width: 500px; margin: auto; background: #e6f2f3; padding: 25px 30px; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,95,107,0.15);">
    <div class="form-group mb-3">
        <label class="form-label" style="font-weight: 600; color: #004451;">Full Name</label>
        <input asp-for="FullName" class="form-control" style="border: 2px solid #005f6b; border-radius: 6px; padding: 10px;" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" style="font-weight: 600; color: #004451;">Date of Birth</label>
        <input asp-for="DateOfBirth" class="form-control" type="date" style="border: 2px solid #005f6b; border-radius: 6px; padding: 10px;" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" style="font-weight: 600; color: #004451;">Email</label>
        <input asp-for="Email" class="form-control" style="border: 2px solid #005f6b; border-radius: 6px; padding: 10px;" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" style="font-weight: 600; color: #004451;">Phone</label>
        <input asp-for="PhoneNumber" class="form-control" style="border: 2px solid #005f6b; border-radius: 6px; padding: 10px;" />
    </div>

    <div class="form-group mb-4">
        <label class="form-label" style="font-weight: 600; color: #004451;">Upload Profile Image</label>
        <input asp-for="imageFile" type="file" class="form-control" style="border: 2px solid #005f6b; border-radius: 6px; padding: 5px;" />
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success" style="background-color: #005f6b; border: none; font-weight: 700; padding: 10px 30px; border-radius: 8px; transition: background-color 0.3s;">
            Save
        </button>
        <a asp-action="Index" class="btn btn-secondary" style="background-color: #4a7c81; border: none; font-weight: 700; padding: 10px 30px; border-radius: 8px; color: white; text-decoration: none; line-height: 32px; transition: background-color 0.3s;">
            Cancel
        </a>
    </div>
</form>

<style>
    /* Petrolic themed hover */
    button.btn-success:hover {
        background-color: #004451;
    }

    a.btn-secondary:hover {
        background-color: #356166;
        color: white;
        text-decoration: none;
    }

    label.form-label {
        user-select: none;
    }
</style>
