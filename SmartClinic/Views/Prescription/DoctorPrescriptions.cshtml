@model List<SmartClinic.ViewModels.PrescriptionDetailsViewModel>

@{
    ViewData["Title"] = "Prescriptions by Doctor";
}

<h2 class="mb-4">📝 Prescriptions by @ViewBag.DoctorName</h2>
<a asp-action="View" class="btn btn-secondary mb-3">⬅ Back to Doctor List</a>

@if (Model.Count == 0)
{
        <div class="alert alert-info">
            No prescriptions found for this doctor.
        </div>
}
else
{
        <div class="row">
        @foreach (var prescription in Model)
        {
                    <div class="col-md-6">
                        <div class="card shadow-sm mb-4 border-left-primary">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Prescription #@prescription.PrescriptionId</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Date:</strong> @prescription.PrescriptionDate.ToString("dd MMM yyyy")</p>
                                <p><strong>Diagnoses:</strong></p>
                                <div class="border p-2 rounded mb-2">@prescription.Diagnoses</div>
                                <p><strong>Notes:</strong></p>
                                <div class="border p-2 rounded mb-3">@prescription.Notes</div>

                                <h6 class="text-primary">Medications</h6>
                        @if (prescription.Medications.Any())
                        {
                                        <ul class="list-group">
                                @foreach (var med in prescription.Medications)
                                {
                                                    <li class="list-group-item">
                                                        <strong>@med.Name</strong> - @med.Dosage<br />
                                                        <small>
                                                            From: @med.StartDate.ToString("dd MMM") 
                                                            To: @med.EndDate.ToString("dd MMM")<br />
                                                            Duration: @med.Duration<br />
                                                            Instructions: @med.Instructions
                                                        </small>
                                                    </li>
                                }
                                        </ul>
                        }
                        else
                        {
                                        <div class="alert alert-warning mt-2">No medications listed.</div>
                        }
                            </div>
                        </div>
                    </div>
        }
        </div>
}

<style>
    .border-left-primary {
        border-left: 5px solid #007bff !important;
    }
</style>
