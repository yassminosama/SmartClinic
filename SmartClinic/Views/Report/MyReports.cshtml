@using SmartClinic.Models
@model List<SmartClinic.Models.Report>

@{
    ViewData["Title"] = "My Reports";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">My Uploaded Reports</h2>

    @if (Model.Any())
    {
            <table class="table table-bordered table-striped shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Attachment</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var report in Model)
                {
                            <tr>
                                <td>@report.ReportDate.ToShortDateString()</td>
                                <td>@report.Description</td>
                                <td>
                                    <a href="@report.Attachment" class="btn btn-link" target="_blank">View</a>
                                </td>
                                <td>
                                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this report?');">
                                        <input type="hidden" name="id" value="@report.ReportId" />
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <div class="alert alert-info">No reports uploaded yet.</div>
    }
</div>
