@{
    ViewData["Title"] = "Patient Dashboard";
}

<!-- Dashboard Header -->
<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold" style="color: #007a87;">👋 Welcome to Your Dashboard</h2>
        <p class="lead text-muted" style="max-width: 600px; margin: auto;">
            Manage your health records, appointments, and more all in one place.
        </p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <a asp-controller="PatientProfile" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card"
                     style="border-radius: 18px; background: #e1f0f2; border: 1.5px solid #007a87;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary fw-semibold">👤 View Profile</h5>
                        <p class="card-text text-secondary mt-2" style="font-weight: 500;">
                            Check and update your personal information.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="Appointment" asp-action="Book" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card"
                     style="border-radius: 18px; background: #e1f0f2; border: 1.5px solid #007a87;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary fw-semibold">📅 Book Appointment</h5>
                        <p class="card-text text-secondary mt-2" style="font-weight: 500;">
                            Schedule a visit with your doctor easily.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="Appointment" asp-action="MyAppointments" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card"
                     style="border-radius: 18px; background: #e1f0f2; border: 1.5px solid #007a87;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary fw-semibold">📖 My Appointments</h5>
                        <p class="card-text text-secondary mt-2" style="font-weight: 500;">
                            View and manage your scheduled appointments.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="PMedicalHistory" asp-action="CreateOrEdit" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card"
                     style="border-radius: 18px; background: #e1f0f2; border: 1.5px solid #007a87;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary fw-semibold">📝 Write Medical History</h5>
                        <p class="card-text text-secondary mt-2" style="font-weight: 500;">
                            Document your medical background securely.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="Report" asp-action="Upload" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card"
                     style="border-radius: 18px; background: #e1f0f2; border: 1.5px solid #007a87;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary fw-semibold">📤 Upload Reports</h5>
                        <p class="card-text text-secondary mt-2" style="font-weight: 500;">
                            Upload lab results and reports.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="Prescription" asp-action="View" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card"
                     style="border-radius: 18px; background: #e1f0f2; border: 1.5px solid #007a87;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary fw-semibold">💊 View Prescriptions</h5>
                        <p class="card-text text-secondary mt-2" style="font-weight: 500;">
                            Check your medications and dosage.
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Custom CSS for Hover Effect -->
<style>
    .hover-card {
        transition: transform 0.35s ease, box-shadow 0.35s ease;
    }

        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 30px rgba(0, 122, 135, 0.4);
            background: #d0e7ea !important;
            border-color: #004451 !important;
        }

    /* Responsive text scaling */
    
</style>
<style>
    @@media (max-width: 576px) {
        .card-title {
            font-size: 1.1rem !important;
        }

        .card-text {
            font-size: 0.9rem !important;
        }
    }
</style>
